<!-- MAIN CONTENT -->
    <div class="container margined" id="tournamentsList">
    
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>All Tournaments</h3>

          <!-- Add button -->
          <% if(typeof firstName == "string" && firstName) {%>
          <a href="/tournaments/create" class="btn btn-primary"><i class="fa fa-plus"></i> Add a tournament</a><br>
          <% } %>
          
          <br>
          <div class="table-responsive">
            <table class="table table-bordered table-striped table-hover table-lg">
              <thead>
                
                <tr>
                  <th>Title</th>
                  <th class="text-center">Game Name</th>
                  <th class="text-center">Start Date</th>
                  <th class="text-center">End date</th>
                  <% if(typeof firstName == "string" && firstName) {%>
                  <th></th>
                  <th></th>
                  <th></th>
                  <% } %>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < tournaments.length; count++) { %>
                <% if(currentUser._id.equals(tournaments[count].owner)) {%>
                <tr>
                  <td><%= tournaments[count].title %></td>
                  <td class="text-center"><%= tournaments[count].game %></td>
                  <td class="text-center"><%=  moment(tournaments[count].beginsAt).format("MMM DD, YYYY") %></td>
                  <td class="text-center"><%= moment(tournaments[count].endsAt).format("MMM DD, YYYY") %></td>
                  <% if(typeof firstName == "string" && firstName) {%>
                  <!-- Edit button -->
                  <td class="text-center">
                    <a href="/tournaments/edit/<%= tournaments[count]._id %>" class="btn btn-primary btn-sm">Edit</a>
                  </td>

                  <!-- Delete button -->
                  <td class="text-center">
                    <a href="/tournaments/delete/<%= tournaments[count]._id %>" class="btn btn-danger btn-sm">Delete</a>
                  </td>
                  <td class="text-center">
                    <a href="/tournaments/view/<%= tournaments[count]._id %>" class="btn btn-success btn-sm">Run</a>
                  </td>
                </tr>
                  <% } %>
                  <% } %>
                <% } %>
              </tbody>
            </table>
          </div>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>
